---
import { Image } from "astro:assets";

import das from "../assets/das.png";
import xpander from "../assets/xpander.png";
---

<div class="w-full flex flex-col">
  <h2 class="text-center text-3xl mb-3">COMPANIES</h2>
  <ul
    class="lg:flex lg:items-center grid grid-cols-1 gap-8 rounded-t-md bg-[#C2DFE3]/20 p-5 justify-around"
  >
    <li class="flex flex-col items-center">
      <Image
        class="object-scale-down w-20 h-20 md:w-24 md:h-24 xl:w-32 xl:h-32 hover:scale-105 transition-transform duration-150"
        src={das}
        alt={"das"}
      />
      <span>October 2022 - May 2023</span>
    </li>
    <li class="flex flex-col items-center">
      <Image
        class="object-scale-down w-20 h-20 md:w-24 md:h-24 xl:w-32 xl:h-32 hover:scale-105 transition-transform duration-150"
        src={xpander}
        alt={"xpander"}
        title="Currently working here!"
        data-tooltip-placement="top"
      />
      <span>Since May 2023</span>
    </li>
  </ul>
</div>
